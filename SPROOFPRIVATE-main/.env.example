# ⚠️ SECURITY WARNING ⚠️
# This is an EXAMPLE file. Copy to .env and fill with your actual values.
# NEVER commit the .env file to version control!

# === ALPACA TRADING API ===
# Get these from https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live

# === PAPER TRADING (RECOMMENDED FOR TESTING) ===
ALPACA_PAPER_API_KEY=your_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_paper_secret_key_here
ALPACA_PAPER_BASE_URL=https://paper-api.alpaca.markets

# === MINIO STORAGE ===
# For historical data storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_SECURE=false
MINIO_BUCKET=trading-data

# === OPENROUTER AI (OPTIONAL) ===
# For AI-enhanced trading strategies
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# === DATABASE ===
DATABASE_URL=sqlite:///trading.db
# For PostgreSQL: postgresql://user:password@localhost:5432/trading_db

# === REDIS CACHE (OPTIONAL) ===
REDIS_URL=redis://localhost:6379/0

# === MONITORING (OPTIONAL) ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# === TRADING CONFIGURATION ===
TRADING_MODE=paper  # paper or live - ALWAYS start with paper!
MAX_POSITION_SIZE=10000
RISK_LIMIT_PERCENT=2.0
DEFAULT_STOP_LOSS_PERCENT=1.0
DEFAULT_TAKE_PROFIT_PERCENT=3.0

# === FEATURE FLAGS ===
ENABLE_AI_TRADING=false
ENABLE_OPTIONS_TRADING=false
ENABLE_MARGIN_TRADING=false
ENABLE_CRYPTO_TRADING=false
ENABLE_INTERNATIONAL_MARKETS=false

# === LOGGING ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading.log

# === SECURITY ===
ENABLE_2FA=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3

# === NOTIFICATIONS (OPTIONAL) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# === SLACK ALERTS (OPTIONAL) ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#trading-alerts

# === TELEGRAM BOT (OPTIONAL) ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === ADVANCED OPTIONS ===
GPU_ENABLED=false
GPU_DEVICE_ID=0
MAX_WORKERS=4
CACHE_TTL_SECONDS=300
WEBSOCKET_RECONNECT_INTERVAL=5
API_RATE_LIMIT_PER_MINUTE=200

# === DEVELOPMENT ===
DEBUG_MODE=false
MOCK_TRADING=false
BYPASS_RISK_CHECKS=false  # DANGEROUS - Never true in production!

# === INTERACTIVE BROKERS (OPTIONAL) ===
IB_GATEWAY_HOST=127.0.0.1
IB_GATEWAY_PORT=7497
IB_CLIENT_ID=1

# === QUICKFIX (OPTIONAL) ===
FIX_CONFIG_FILE=fix.cfg
FIX_SENDER_COMP_ID=YOUR_ID
FIX_TARGET_COMP_ID=BROKER_ID

# Remember:
# 1. NEVER share this file with actual values
# 2. ALWAYS use paper trading first
# 3. Enable features gradually as you test
# 4. Monitor all trades carefully
# 5. Set conservative risk limits
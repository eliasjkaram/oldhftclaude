FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements_monitoring.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_monitoring.txt

# Copy application files
COPY production_monitoring_suite.py .
COPY PRODUCTION_FIXES.py .
COPY monitoring_alerts_config.yaml config/alerts.yaml

# Create necessary directories
RUN mkdir -p logs config

# Expose ports
EXPOSE 8080 9090

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV MONITORING_LOG_LEVEL=INFO

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8080/health').raise_for_status()"

# Run the monitoring suite
CMD ["python", "production_monitoring_suite.py"]
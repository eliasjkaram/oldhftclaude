{
  "dashboard": {
    "id": null,
    "title": "HFT Cluster Dashboard",
    "panels": [
      {
        "title": "Symbols Processed/sec",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(symbols_processed_total[5m])",
            "legendFormat": "{{instance}}"
          }
        ]
      },
      {
        "title": "Opportunities Found/sec",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(opportunities_found_total[5m])",
            "legendFormat": "{{instance}}"
          }
        ]
      },
      {
        "title": "GPU Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "gpu_utilization",
            "legendFormat": "GPU {{gpu_id}}"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "memory_usage_bytes",
            "legendFormat": "{{instance}}"
          }
        ]
      }
    ]
  }
}